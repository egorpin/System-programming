touch Work_files

mkdir -p Work/Лабораторная\ работа\ №1\!/Пингин\ Егор\ Витальевич

chmod 774 Work/Лабораторная\ работа\ №1\!
chmod 200 Work/Лабораторная\ работа\ №1\!/Пингин\ Егор\ Витальевич

touch "Work/Text @1" "Work/Text \$2" "Work/Text #3"

echo "Птица говорун отличается умом и сообразительностью!" > "Work/Text @1"
echo "Отличается умом, отличается сообразительностью..." >> "Work/Text @1"

cp "Work/Text @1" "Work/Text \$2"

mv "Work/Text \$2" "Work/Лабораторная работа №1!/"
cp "Work/Text @1" "Work/Лабораторная работа №1!/Пингин Егор Витальевич/"

gzip -k "Work/Text @1" "Work/Text #3"
tar -cf MyAchiv.tar "Work/Text @1.gz" "Work/Text #3.gz"

gzip -d "Work/Text #3.gz"
head -n 1 "Work/Text @1.gz" | gzip -d >> "Work/Text #3" 2>/dev/null
echo "Будь осторожен! Преступник вооружен!" >> "Work/Text #3"

touch "Work/Лабораторная работа №1!/Пингин Егор Витальевич/Result_one"
tac "Work/Text @1" > "Work/Лабораторная работа №1!/Пингин Егор Витальевич/Result_one" 2>/dev/null

mv "Work/Лабораторная работа №1!/Пингин Егор Витальевич/Result_one" "Work/Лабораторная работа №1!/Пингин Егор Витальевич/Result_two"

ls -la "Work/Лабораторная работа №1!/Пингин Егор Витальевич/T"* > "Work/Лабораторная работа №1!/Result_3" 2>/dev/null

uname -a >> "Work/Лабораторная работа №1!/Result_3"
date >> "Work/Лабораторная работа №1!/Result_3"
